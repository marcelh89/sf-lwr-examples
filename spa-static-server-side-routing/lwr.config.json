{
  "lwc": { "modules": [{ "dir": "$rootDir/src/modules" }] },
  "routes": [
    {
      "id": "home",
      "path": "/",
      "rootComponent": "home/app",
      "layoutTemplate": "$layoutsDir/main.html"
    },
    {
      "id": "main",
      "path": "/main",
      "rootComponent": "main/app",
      "layoutTemplate": "$layoutsDir/main.html"
    },
    {
      "id": "about",
      "path": "/about",
      "rootComponent": "about/app",
      "layoutTemplate": "$layoutsDir/main.html"
    }
  ],
  "errorRoutes": [
    {
      "id": "not_found",
      "status": 404,
      "rootComponent": "global/error"
    },
    {
      "id": "server_error",
      "status": 500,
      "contentTemplate": "$contentDir/server-error.html"
    }
  ]
}
